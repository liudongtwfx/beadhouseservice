<?xml version="1.0" encoding="UTF-8"?>

<!--
    status : 这个用于设置log4j2自身内部的信息输出,可以不设置,当设置成trace时,会看到log4j2内部各种详细输出
    monitorInterval : Log4j能够自动检测修改配置文件和重新配置本身, 设置间隔秒数。
-->
<Configuration status="info" monitorInterval="60">

    <Properties>
        <!-- 配置日志文件输出目录 -->
        <Property name="LOG_HOME">/home/liudong/ideaProject/beadhouseservice/logs</Property>
    </Properties>

    <Appenders>

        <!--这个输出控制台的配置-->
        <Console name="Console" target="SYSTEM_OUT">
            <!-- 控制台只输出level及以上级别的信息(onMatch),其他的直接拒绝(onMismatch) -->
            <ThresholdFilter level="debug" onMatch="ACCEPT" onMismatch="DENY"/>
            <!-- 输出日志的格式 -->
            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss.SSS} %-5level %class{36} %L %M - %msg%xEx%n"/>
        </Console>

        <!-- 设置日志格式并配置日志压缩格式(service.log.年份.gz) -->
        <RollingRandomAccessFile name="service_appender"
                                 immediateFlush="false" fileName="${LOG_HOME}/service.log"
                                 filePattern="${LOG_HOME}/service.log.%d{yyyy-MM-dd}.log.gz">
            <PatternLayout>
                <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} %-5level %class{36} %L %M -- %msg%xEx%n</pattern>
            </PatternLayout>
            <Policies>
                <TimeBasedTriggeringPolicy interval="1" modulate="true"/>
            </Policies>
        </RollingRandomAccessFile>
        <RollingRandomAccessFile name="service_controller_log"
                                 immediateFlush="false" fileName="${LOG_HOME}/controller.log"
                                 filePattern="${LOG_HOME}/controller.log.%d{yyyy-MM-dd}.log.gz">
            <PatternLayout>
                <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} %-5level %class{36} %L %M -- %msg%xEx%n</pattern>
            </PatternLayout>
            <Policies>
                <TimeBasedTriggeringPolicy interval="1" modulate="true"/>
            </Policies>
        </RollingRandomAccessFile>

        <RollingRandomAccessFile name="function_time_log"
                                 immediateFlush="true" fileName="${LOG_HOME}/functime.log"
                                 filePattern="${LOG_HOME}/functime.log.%d{yyyy-MM-dd}.log.gz">
            <PatternLayout>
                <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} %msg%xEx%n</pattern>
            </PatternLayout>
            <Policies>
                <TimeBasedTriggeringPolicy interval="1" modulate="true"/>
            </Policies>
        </RollingRandomAccessFile>
        <RollingRandomAccessFile name="exception"
                                 immediateFlush="true" fileName="${LOG_HOME}/exception.log"
                                 filePattern="${LOG_HOME}/exception.log.%d{yyyy-MM-dd}.log.gz">
            <PatternLayout>
                <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} %-5level %class{36} %L %M -- %msg%xEx%n</pattern>
            </PatternLayout>
            <Policies>
                <TimeBasedTriggeringPolicy interval="1" modulate="true"/>
            </Policies>
        </RollingRandomAccessFile>
        <RollingRandomAccessFile name="kafka"
                                 immediateFlush="true" fileName="${LOG_HOME}/kafka.log"
                                 filePattern="${LOG_HOME}/kafka.log.%d{yyyy-MM-dd}.log.gz">
            <PatternLayout>
                <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} %-5level %class{36} %L %M -- %msg%xEx%n</pattern>
            </PatternLayout>
            <Policies>
                <TimeBasedTriggeringPolicy interval="1" modulate="true"/>
            </Policies>
        </RollingRandomAccessFile>

        <RollingRandomAccessFile name="es"
                                 immediateFlush="true" fileName="${LOG_HOME}/es.log"
                                 filePattern="${LOG_HOME}/es.log.%d{yyyy-MM-dd}.log.gz">
            <PatternLayout>
                <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} %-5level %class{36} %L %M -- %msg%xEx%n</pattern>
            </PatternLayout>
            <Policies>
                <TimeBasedTriggeringPolicy interval="1" modulate="true"/>
            </Policies>
        </RollingRandomAccessFile>

        <RollingRandomAccessFile name="beadhousebrowse"
                                 immediateFlush="true" fileName="${LOG_HOME}/beadhousebrowse.log"
                                 filePattern="${LOG_HOME}/beadhousebrowse.log.%d{yyyy-MM-dd}.log.gz">
            <PatternLayout>
                <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} %msg%xEx%n</pattern>
            </PatternLayout>
            <Policies>
                <TimeBasedTriggeringPolicy interval="1" modulate="true"/>
            </Policies>
        </RollingRandomAccessFile>

        <RollingRandomAccessFile name="articlebrowse"
                                 immediateFlush="true" fileName="${LOG_HOME}/articlebrowse.log"
                                 filePattern="${LOG_HOME}/articlebrowse.log.%d{yyyy-MM-dd}.log.gz">
            <PatternLayout>
                <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} %msg%xEx%n</pattern>
            </PatternLayout>
            <Policies>
                <TimeBasedTriggeringPolicy interval="1" modulate="true"/>
            </Policies>
        </RollingRandomAccessFile>

        <RollingRandomAccessFile name="debuginfo"
                                 immediateFlush="true" fileName="${LOG_HOME}/debug.log"
                                 filePattern="${LOG_HOME}/debuginfo.log.%d{yyyy-MM-dd}.log.gz">
            <PatternLayout>
                <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} %msg%xEx%n</pattern>
            </PatternLayout>
            <Policies>
                <TimeBasedTriggeringPolicy interval="1" modulate="true"/>
            </Policies>
        </RollingRandomAccessFile>


        <!-- DEBUG日志格式 -->
        <RollingRandomAccessFile name="service_debug_appender"
                                 immediateFlush="false" fileName="${LOG_HOME}/service.log"
                                 filePattern="${LOG_HOME}/service.log.%d{yyyy-MM-dd}.debug.gz">
            <PatternLayout>
                <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} %-5level %class{36} %L %M -- %msg%xEx%n</pattern>
            </PatternLayout>
            <Policies>
                <TimeBasedTriggeringPolicy interval="1" modulate="true"/>
            </Policies>
        </RollingRandomAccessFile>
    </Appenders>

    <Loggers>
        <!-- 配置日志的根节点 -->
        <root level="debug">
            <appender-ref ref="service_debug_appender"/>
        </root>

        <!-- 第三方日志系统 -->
        <logger name="org.springframework.core" level="debug"/>
        <logger name="org.springframework.beans" level="debug"/>
        <logger name="org.springframework.context" level="debug"/>
        <logger name="org.springframework.web" level="debug"/>
        <logger name="org.jboss.netty" level="warn"/>
        <logger name="org.apache.http" level="warn"/>
        <logger name="org.thymeleaf" level="debug"/>

        <!-- 日志实例(info),其中'service-log'继承root,但是root将日志输出控制台,而'service-log'将日志输出到文件,通过属性'additivity="false"'将'service-log'的
             的日志不再输出到控制台 -->
        <logger name="service_log" level="info" includeLocation="true" additivity="true">
            <appender-ref ref="service_appender"/>
        </logger>

        <!-- 日志实例(debug) -->
        <logger name="service_log" level="debug" includeLocation="true" additivity="false">
            <appender-ref ref="service_debug_appender"/>
        </logger>

        <logger name="controller" level="trace" includeLocation="true" additivity="false">
            <appender-ref ref="service_controller_log"/>
        </logger>

        <logger name="main.java.com.beadhouse.System.SystemLogAspect" level="trace" includeLocation="true"
                additivity="false">
            <appender-ref ref="service_appender"/>
        </logger>
        <logger name="com.beadhouse.test" level="trace" includeLocation="true" additivity="false">
            <appender-ref ref="service_appender"/>
        </logger>
        <logger name="org.springframework.web.context.ContextLoader" level="trace" includeLocation="true"
                additivity="false">
            <appender-ref ref="service_controller_log"/>
        </logger>

        <logger name="functiontime" level="trace" includeLocation="true" additivity="false">
            <appender-ref ref="function_time_log"/>
        </logger>

        <logger name="exception" level="trace" includeLocation="true" additivity="false">
            <appender-ref ref="exception"/>
        </logger>
        <logger name="kafka" level="trace" includeLocation="true" additivity="false">
            <appender-ref ref="kafka"/>
        </logger>
        <logger name="es" level="trace" includeLocation="true" additivity="false">
            <appender-ref ref="es"/>
        </logger>
        <logger name="beadhousebrowse" level="trace" includeLocation="true" additivity="false">
            <appender-ref ref="beadhousebrowse"/>
        </logger>
        <logger name="articlebrowse" level="trace" includeLocation="true" additivity="false">
            <appender-ref ref="articlebrowse"/>
        </logger>
        <logger name="debuginfo" level="trace" includeLocation="true" additivity="false">
            <appender-ref ref="debuginfo"/>
        </logger>
    </Loggers>

</Configuration>